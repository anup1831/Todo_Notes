<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pathfinder.anup.todo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/todo_launcher_square_yellow"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/todo_launcher_round_yellow"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewTodoScreen"
            android:theme="@style/Base.Theme.AppCompat.Dialog"></activity>
    </application>

</manifest>